<Window x:Class="Example13Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example13Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Border BorderBrush="Black" BorderThickness="1" Canvas.Left="200" Canvas.Top="76" Padding="10">
        <TextBlock x:Name="lblCount" Canvas.Left="323" TextWrapping="Wrap" Canvas.Top="41" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50" FontSize="18" TextAlignment="Center"><Run Text="0"/><LineBreak/><Run/></TextBlock>
        </Border>
        <Button x:Name="btnPlus" Content="+" Canvas.Left="171" Canvas.Top="162" HorizontalAlignment="Center" Height="55" VerticalAlignment="Center" Width="69" FontSize="16" FontWeight="Bold" Click="btnPlus_Click"/>
        <Button x:Name="btnMinus" Content="-" Canvas.Left="295" Canvas.Top="162" HorizontalAlignment="Left" Height="55" VerticalAlignment="Center" Width="57" FontSize="18" FontWeight="Bold" Click="btnMinus_Click"/>

    </Canvas>
</Window>
